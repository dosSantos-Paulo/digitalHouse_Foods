<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LoginFragment"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_tumbnail_foodPlate"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/img_height_restaurantList"
        android:contentDescription="@string/restaurant_image"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_outback_tumbnail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_back_plate"
        android:layout_width="@dimen/arrow_size"
        android:layout_height="@dimen/arrow_size"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="350dp"
        android:clickable="true"
        android:contentDescription="@string/back_arrow"
        android:focusable="true"
        android:src="@drawable/ic_baseline_arrow_back_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/colorWhite"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/txt_title_foodPlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/cardTitle"
        android:layout_margin="@dimen/margin_Medium"
        android:textStyle="bold"
        android:fontFamily="@font/roboto"
        android:shadowRadius="1"
        android:shadowColor="@color/textColor"
        android:shadowDx="3"
        android:shadowDy="3"
        tools:text="Title"
        app:layout_constraintBottom_toBottomOf="@+id/img_tumbnail_foodPlate"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_tumbnail_foodPlate">

        <TextView
            android:id="@+id/txt_description_foodPlate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_Medium"
            tools:text="Descrição do texto"
            android:textSize="@dimen/text_Medium"
            android:textColor="@color/colorGray"/>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>